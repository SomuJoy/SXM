{
    "name": "shared-validation",
    "$schema": "../../../node_modules/nx/schemas/project-schema.json",
    "projectType": "library",
    "sourceRoot": "libs/shared/validation/src",
    "prefix": "de-care",
    "targets": {
        "lint": {
            "executor": "@nrwl/linter:eslint",
            "options": {
                "lintFilePatterns": ["libs/shared/validation/src/**/*.ts", "libs/shared/validation/src/**/*.html"]
            },
            "outputs": ["{options.outputFile}"]
        },
        "test": {
            "executor": "@nrwl/jest:jest",
            "options": {
                "jestConfig": "libs/shared/validation/jest.config.js",
                "tsConfig": "libs/shared/validation/tsconfig.spec.json",
                "passWithNoTests": true,
                "setupFile": "libs/shared/validation/src/test-setup.ts"
            }
        }
    },
    "generators": {
        "@nrwl/angular:component": {
            "style": "scss"
        }
    },
    "tags": ["type:ui-util", "scope:shared-ui-util"]
}
