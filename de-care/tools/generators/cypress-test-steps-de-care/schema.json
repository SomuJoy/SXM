{
    "$schema": "https://json-schema.org/schema",
    "cli": "nx",
    "$id": "cypress-test-steps-de-care",
    "type": "object",
    "description": "Generates cucumber steps from .feature files",
    "properties": {
        "featureFilePath": {
            "type": "string",
            "description": "Path from root to a .feature file or to a folder with .feature files.",
            "x-prompt": "Path from root to a .feature file or to a folder with .feature files."
        },
        "viewport": {
            "type": "string",
            "description": "Viewport size?",
            "enum": ["desktop", "mobile"],
            "x-prompt": {
                "message": "Viewport size?",
                "type": "list",
                "items": [
                    {
                        "value": "desktop",
                        "label": "desktop"
                    },
                    {
                        "value": "mobile",
                        "label": "mobile"
                    }
                ]
            }
        }
    },
    "required": ["featureFilePath", "viewport"]
}
